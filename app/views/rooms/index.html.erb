<div class="container-fluid">
  <div class="row">
    <div class="col-3">
        <%# <%= render 'form', room: Room.new %> 
        <%# to create new room %>
        <p>Hello, <%= Current.user.username %></p>
        <hr>
        <% @rooms.each do |room| %>
          <%= link_to room do %>
          <div class="card">
            <%= room.name %>
          </div>
          <% end %>
        <% end %>
    </div>
    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <p><%= @room.name %></p>
          <% @room.messages.each do |message| %>
            <div class="message mb-3 <%= 'me' if message.user == Current.user %>">
              <div class="username">
                <%= message.user.username %>
              </div>
              <div class="content">
                <%= message.content %>
              </div>
            </div>
          <% end %>
          <div class="message-box">
            <%= render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>