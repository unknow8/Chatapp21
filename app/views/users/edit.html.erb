<section>
<div class="container-lg">
    <div class="profile-content">
        <h1>My Account</h1>
        <%= form_for(Current.user, html: {multipart: true}) do |f| %>
        <div class="avatar-left">
            <div><%= avatar_for(Current.user) %></div>
            <br>
            <p>Change Avatar </p>
            <%= f.file_field :avatar, class: "form-control input-normal"%>
        </div>
        <br>
        <div class="info-right">
            <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <td><%= f.text_field :username, class: "form-control mb-2" %></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                <th scope="row">Email</th>
                <td><%= Current.user.email %></td>
                </tr>
            </tbody>
            <br>
            </table>
            <%= f.submit "Update", class: "btn btn-outline-dark btn-sm" %>
        <% end %>
        </div>
    </div>
</div>
</section>