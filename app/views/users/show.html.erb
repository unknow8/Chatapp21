<div class="container-lg">
    <h1>My Account</h1>
    <%= avatar_for(Current.user) %>
    <table class="table table-borderless">
    <thead>
        <tr>
        <th scope="col">Username</th>
        <td><%= Current.user.username %></td>
        </tr>
    </thead>
    <tbody>
        <tr>
        <th scope="row">Email</th>
        <td><%= Current.user.email %></td>
        </tr>
    </tbody>
    <%# <tbody>
    Change avatar
    </tbody> %>
    </table>
    <%= link_to "Edit", edit_user_path(@user), class: "btn btn-outline-dark btn-sm" %>
</div>

<div class="container-xl">
    <h1>Edit Profile</h1>
    <%= form_for(Current.user, html: {multipart: true}) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <br>
        <p>Change avatar: <%= f.file_field :avatar %></p>
        <%= f.submit "Save Change" %>
    <% end %>
</div>
